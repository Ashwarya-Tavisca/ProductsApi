@model IEnumerable<ProductUI.Models.HotelProduct>

@{
    ViewBag.Title = "OnBookClick";
}

<h2>OnBookClick</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfAvailableRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfAvailableRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPrice)
        </td>
        <td>
            @Html.ActionLink("Book", "OnBookClick", new { @productId = item.ProductId }) |
            @Html.ActionLink("Save", "OnSaveClick", new { @productId = item.ProductId })
        </td>
    </tr>
}

</table>
@if (ViewData["CantBook"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Cant book");
        };
    </script>
}

