@model IEnumerable<ProductUI.Models.HotelProduct>

@{
    ViewBag.Title = "GetHotelProducts";
}

<h2>GetHotelProducts</h2>

<p>
    @Html.ActionLink("Get Saved Items", "GetSavedProds")
</p>
<p>@Html.ActionLink("Get Booked Items", "GetBookedProds")</p>
<table class="table">
    <tr>
    
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfAvailableRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfAvailableRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPrice)
        </td>
        <td>
            @Html.ActionLink("Book", "OnBookClick", new { @productId = item.ProductId }) |
            @Html.ActionLink("Save", "OnSaveClick", new { @productId = item.ProductId })
        </td>
    </tr>
}

</table>
